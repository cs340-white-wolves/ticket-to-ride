<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/radial_gradient"
    android:padding="5dp">

    <TextView
        android:id="@+id/rank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/vacer"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_total_font"
        app:layout_constraintEnd_toStartOf="@+id/playerUsername"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/playerUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoText="true"
        android:fontFamily="@font/vacer"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_font"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/rank"
        app:layout_constraintEnd_toStartOf="@+id/routePoints"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rank"
        tools:text="gilbert" />

    <TextView
        android:id="@+id/routePoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vacer"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/playerUsername"
        app:layout_constraintEnd_toStartOf="@+id/completePoints"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playerUsername"
        tools:text="200" />

    <TextView
        android:id="@+id/completePoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vacer"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/routePoints"
        app:layout_constraintEnd_toStartOf="@+id/incompletePoints"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/routePoints"
        tools:text="+22" />

    <TextView
        android:id="@+id/incompletePoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vacer"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/completePoints"
        app:layout_constraintEnd_toStartOf="@+id/numDestinationsPoints"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/completePoints"
        tools:text="-10" />

    <TextView
        android:id="@+id/numDestinationsPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vacer"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_font"
        app:layout_constraintBaseline_toBaselineOf="@+id/incompletePoints"
        app:layout_constraintEnd_toStartOf="@+id/totalPoints"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/incompletePoints"
        tools:text="+10" />

    <TextView
        android:id="@+id/totalPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vacer"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="@dimen/game_summary_total_font"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/numDestinationsPoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numDestinationsPoints"
        tools:text="45" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/shangiri"
        android:text="@string/rank"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rank"
        app:layout_constraintStart_toStartOf="@+id/rank"
        app:layout_constraintTop_toBottomOf="@+id/rank" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shangiri"
        android:text="@string/destination_count_points"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_small"
        app:layout_constraintEnd_toEndOf="@+id/numDestinationsPoints"
        app:layout_constraintStart_toStartOf="@+id/numDestinationsPoints"
        app:layout_constraintTop_toBottomOf="@+id/numDestinationsPoints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shangiri"
        android:text="@string/total_points"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_category"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/totalPoints"
        app:layout_constraintStart_toStartOf="@+id/totalPoints"
        app:layout_constraintTop_toBottomOf="@+id/totalPoints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shangiri"
        android:text="@string/destination_incomplete_points"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_small"
        app:layout_constraintEnd_toEndOf="@+id/incompletePoints"
        app:layout_constraintStart_toStartOf="@+id/incompletePoints"
        app:layout_constraintTop_toBottomOf="@+id/incompletePoints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:fontFamily="@font/shangiri"
        android:text="@string/player_info_player_heading"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_category"
        app:layout_constraintEnd_toEndOf="@+id/playerUsername"
        app:layout_constraintStart_toStartOf="@+id/playerUsername"
        app:layout_constraintTop_toBottomOf="@+id/playerUsername" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:fontFamily="@font/shangiri"
        android:text="@string/route_points"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_category"
        app:layout_constraintEnd_toEndOf="@+id/routePoints"
        app:layout_constraintStart_toStartOf="@+id/routePoints"
        app:layout_constraintTop_toBottomOf="@+id/routePoints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shangiri"
        android:text="@string/destination_complete_points"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_small"
        app:layout_constraintEnd_toEndOf="@+id/completePoints"
        app:layout_constraintStart_toStartOf="@+id/completePoints"
        app:layout_constraintTop_toBottomOf="@+id/completePoints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shangiri"
        android:text="Destinations"
        android:textColor="@color/Gold"
        android:textSize="@dimen/game_summary_font_category"
        app:layout_constraintEnd_toEndOf="@+id/numDestinationsPoints"
        app:layout_constraintStart_toStartOf="@+id/completePoints"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</android.support.constraint.ConstraintLayout>